                          for (var i = 0; i < response.body.data.pickupDataList.length; i++) {
                            _this.showPickupData.push(response.body.data.pickupDataList[i])
                          }
                          _this.pageIndex = asda;
                          _this.down = false;
                          sw = true ;
                        }else{}   
                      }).then((error)=> _this.error = error)
                    } 
