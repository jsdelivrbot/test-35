<template>
  <div id="submitted">
    <div class="item" v-for="item in commitList">
      <p class="user_ifon">
        <i class="user_name">{{item.tradeUserName}}</i><i class="user_adderss">{{item.brokerUserName}}</i>
      </p>
      <p>
        <span class="user_account">账号：<i>{{item.tradeUserNo}}</i></span><span class="user_num">数量（块）：<i>{{item.placingQuantity}}</i></span>
      </p>
      <p>
        <span>日期：{{item.lastUpdateDate}}</span><span>金额（元）：{{item.money}}</span>
      </p>
      <p>
        <span>状态：{{item.status}}</span><span>备注：{{item.comments}}</span>
      </p>
      <p>
        <span v-if="test(item.placingAgent)">配售员：{{item.placingAgent}}</span></span>
      </p>
    </div>
    <v-empty v-show="emptySta"></v-empty>
  </div>
</template>

<script>
import empty from 'components/empty/empty';

  export default{
    components:{
      'v-empty': empty
    },
    data(){
      return{
        commitList: {},
        emptySta: false
      }
    },
    methods: {
      test: function(placingAgent){
        var result;
        if(placingAgent == ''){
          result = false
        }else{
          result = true
        }
        return result;
      }
    },
    created() {
     this.commitList = this.$route.query.commitList;
     localStorage.setItem('sellroute', 'submitted');
    },
    mounted(){
      if (this.commitList == null) {
         this.emptySta = true
       }else{
         this.emptySta = false
       }
    }
  };
</script>

