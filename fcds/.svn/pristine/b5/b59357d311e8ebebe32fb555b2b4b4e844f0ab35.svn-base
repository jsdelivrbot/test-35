                  containLabel: true
              },
              xAxis : [
                  {
                      type : 'category',
                      boundaryGap : false,
                      data : v1,
                      axisLabel: {
                         interval: 0
                      }
                  }
              ],
              yAxis : [
                  {
                      type : 'value',
                      axisLabel: {
                          formatter: '{value}'
                      }
                  }
              ],
              series : [
                  {
                      name:'挂牌商',
                      type:'line',
                      data:v2,
                      itemStyle: {
                        normal: {
                          color:'#ff6701',
                           // label: {
                           //   show: true,
                           //   position: 'top',
                           //   formatter: "{c}"
                           // }
                        }
                      }
                  },
                  {
                      name:'客户',
                      type:'line',
                      data:v3,
                      itemStyle: {
                        normal: {
                          color:'#54b9ff',
                           // label: {
                           //   show: true,
                           //   position: 'top',
                           //   formatter: "{c}"
                           // }
                        }
